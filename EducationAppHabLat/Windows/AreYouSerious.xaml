<Window x:Class="EducationAppHabLat.Windows.AreYouSerious"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EducationAppHabLat.Windows"
        mc:Ignorable="d"
        Title="AreYouSerious" Height="100" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <Label Content="Вы действительно хотите изменить запись с данным айдишником ?"></Label>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="YesBtn" Content="DA" Click="YesBtn_Click"></Button>
            <Button x:Name="NoBtn" Content="NET" Click="NoBtn_Click"></Button>
        </StackPanel>
        </StackPanel>
    </Grid>
</Window>
