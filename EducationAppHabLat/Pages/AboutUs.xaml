<Page x:Class="EducationAppHabLat.Pages.AboutUs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EducationAppHabLat.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="490" d:DesignWidth="800"
      Title="AboutUs">

    <Grid>
        <StackPanel>
            <Image x:Name="QrCode" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,0,0,0" Width="300" Height="300"></Image>
            <Button x:Name="QrCodeBtn" Visibility="Hidden" Width="100" Height="30">ПОКАЗАТЬ</Button>
            <Label HorizontalAlignment="center" FontSize="20" FontWeight="UltraBold" >Компания: ТопКомпани</Label>
            <Label HorizontalAlignment="center" FontSize="20" FontWeight="UltraBold" >Тел: 8(888)-888-88-88</Label>
            <Label HorizontalAlignment="center" FontSize="20" FontWeight="UltraBold" >Адрес: Казань</Label>
            <Button x:Name="BackBtn" HorizontalAlignment="center" Width="100" Height="30" Click="BackBtn_Click">НАЗАД</Button>
        </StackPanel>
    </Grid>
</Page>
